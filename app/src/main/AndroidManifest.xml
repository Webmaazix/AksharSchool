<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.akshar.one">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.AksharSchoolApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity android:name=".view.studentprofile.EditStudentProfile"></activity>
        <activity android:name=".view.studentprofile.ViewStudentProfile" />
        <activity android:name=".view.studentprofile.StudentList" />
        <activity android:name=".view.notification.NotificationActivity" />
        <activity android:name=".view.browser.InAppBrowserActivity" />
        <activity
            android:name=".view.welcome.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.MainActivity" />
    </application>

</manifest>