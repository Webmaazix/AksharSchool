<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_rounded_radius_4_bg_without_padding">

    <RelativeLayout
        android:id="@+id/relHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/light_purple_top_corners_rounded_bg"
        android:paddingStart="@dimen/common_margin"
        android:paddingEnd="@dimen/common_margin"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_6sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mark_all_as"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_baseline_close_24"
            android:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPresent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/present"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relHeader"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingStart="@dimen/common_margin"
        android:paddingEnd="@dimen/common_margin"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:background="@drawable/textview_selector"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtHoliday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/holiday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPresent"
        android:paddingStart="@dimen/common_margin"
        android:paddingEnd="@dimen/common_margin"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:background="@drawable/textview_selector"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtWeekOff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_selector"
        android:paddingStart="@dimen/common_margin"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/common_margin"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/week_off"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHoliday"
        android:layout_marginBottom="@dimen/_8sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>